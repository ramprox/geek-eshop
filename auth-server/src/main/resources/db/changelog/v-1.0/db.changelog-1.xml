<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="1" author="ramprox">
        <createSequence sequenceName="roles_seq_gen"
                        catalogName="roles"
                        incrementBy="1"/>
    </changeSet>
    <changeSet id="2" author="ramprox">
        <createSequence sequenceName="users_seq_gen"
                        catalogName="users"
                        incrementBy="1"/>
    </changeSet>
    <changeSet id="3" author="ramprox">
        <createTable tableName="roles">
            <column name="id" type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="rolesPK"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="ramprox">
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="usersPK"/>
            </column>
            <column name="age" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="5" author="ramprox">
        <createTable tableName="users_roles">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="6" author="ramprox">
        <createIndex indexName="rolename_uq" tableName="roles">
            <column name="name"/>
        </createIndex>
    </changeSet>
    <changeSet id="7" author="ramprox">
        <createIndex indexName="username_uq" tableName="users">
            <column name="username"/>
        </createIndex>
    </changeSet>
    <changeSet id="8" author="ramprox">
        <addForeignKeyConstraint
                baseColumnNames="role_id"
                baseTableName="users_roles"
                constraintName="fk_usersroles_role_id"
                deferrable="false"
                initiallyDeferred="false"
                referencedColumnNames="id"
                referencedTableName="roles"
                validate="true"
                onDelete="CASCADE"/>
    </changeSet>
    <changeSet id="9" author="ramprox">
        <addForeignKeyConstraint
                baseColumnNames="user_id"
                baseTableName="users_roles"
                constraintName="fk_usersroles_user_id"
                deferrable="false"
                initiallyDeferred="false"
                referencedColumnNames="id"
                referencedTableName="users"
                validate="true"/>
    </changeSet>
</databaseChangeLog>
