<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="1" author="ramprox">
        <createSequence sequenceName="brands_seq_gen"
                        catalogName="brands"
                        incrementBy="1"/>
    </changeSet>
    <changeSet id="2" author="ramprox">
        <createSequence sequenceName="categories_seq_gen"
                        catalogName="categories"
                        incrementBy="1"/>
    </changeSet>
    <changeSet id="3" author="ramprox">
        <createSequence sequenceName="products_seq_gen"
                        catalogName="products"
                        incrementBy="1"/>
    </changeSet>
    <changeSet id="4" author="ramprox">
        <createTable tableName="brands">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="brandsPK"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="5" author="ramprox">
        <createTable tableName="categories">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="categoriesPK"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="6" author="ramprox">
        <createTable tableName="products">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="productsPK"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="full_description" type="VARCHAR(2048)"/>
            <column name="short_description" type="VARCHAR(255)"/>
            <column name="price" type="DECIMAL(19, 2)"/>
            <column name="brand_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="7" author="ramprox">
        <addUniqueConstraint
                columnNames="name"
                constraintName="brand_name_uq"
                tableName="brands"/>
    </changeSet>
    <changeSet id="8" author="ramprox">
        <addUniqueConstraint
                columnNames="name"
                constraintName="category_name_uq"
                tableName="categories"/>
    </changeSet>
    <changeSet id="9" author="ramprox">
        <addForeignKeyConstraint
                baseColumnNames="brand_id"
                baseTableName="products"
                constraintName="fk_products_brands_id"
                deferrable="false"
                initiallyDeferred="false"
                referencedColumnNames="id"
                referencedTableName="brands"
                validate="true"
                onDelete="CASCADE"/>
    </changeSet>
    <changeSet id="10" author="ramprox">
        <addForeignKeyConstraint
                baseColumnNames="category_id"
                baseTableName="products"
                constraintName="fk_products_categories_id"
                deferrable="false"
                initiallyDeferred="false"
                referencedColumnNames="id"
                referencedTableName="categories"
                validate="true"/>
    </changeSet>
</databaseChangeLog>
