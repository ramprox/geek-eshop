server {
	listen 80;

	server_name _;

	location / {
	    root /var/opt/eshop;
	    try_files $uri$args $uri$args/ /index.html;
	}

	location /api/v1/products {
	    proxy_pass http://172.17.0.1:8081/api/v1/products;
	}
	
	location /api/v1/pictures {
	    proxy_pass http://172.17.0.1:8082/api/v1/pictures;
	}
}
